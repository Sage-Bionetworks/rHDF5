PKG_CXXFLAGS = -I./hdf5/hdf5/include -I./szip/szip/include -O3 -w -c -fmessage-length=0 -fPIC
PKG_LIBS = ./hdf5/hdf5/lib/libhdf5.a ./hdf5/hdf5/lib/libhdf5_hl.a ./szip/szip/lib/libsz.a -lz -lstdc++

all: mylibs $(SHLIB)

mylibs:
	cd szip; ./configure --disable-shared OBJC=$(OBJC); make install
	cd hdf5; ./configure --disable-shared OBJC=$(OBJC); make install

shlib-clean: clean

clean:
	rm -rf ../src-i386
	rm -rf ../src-x86-64
	rm *.so
